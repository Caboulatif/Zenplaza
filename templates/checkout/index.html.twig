{# Page qui affiche le formulaire #}
{% extends 'base.html.twig' %}

{% block title %}Checkout Zenplaza ! {% endblock %}

{% block body %}

{{ include ( "partials/title_section.html.twig",{'name': 'Checkout'} )}}

<div class="section">
	<div class="container">
				{# Initialisation du formulaire #}
				{{ form_start(checkout, {action : path('checkout_confirm')}) }}
        <div class="row">
					{# La colonne de gauche #}
        	<div class="col-md-6">
                <div class="heading_s1">
                        <h4> Your delivery Address </h4>
                        <div class="content">
														{{ form_widget(checkout.address)|replace( {'[spr]' : '<br>'} )|raw}}
                        </div>
												<a href="{{ path('address_new') }}" class= "btn btn-fill-out btn-block mt-1"> Add new address </a>
                	</div>
                <div class="heading_s1">
                    <h4>Your carrier</h4>
                    <div class="content">
										{{ form_widget(checkout.carrier)|replace( {'[spr]' : '<br>'} )|raw  }}
                    </div>
                </div>
                <div class="heading_s1">
                    <h4>Additional information</h4>
                    <div class="form-group mb-0">
												{{ form_widget(checkout.informations)}}
                    </div>
                </div>
          </div>

					{# La colonne de droite  #}
          <div class="col-md-6">
                <div class="order_review">
                    <div class="heading_s1">
                        <h4>Your Orders</h4>
                    </div>
                    <div class="table-responsive order_table">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
														{# Boucler sur les éléments que ns avons dans cart.products cad les produits qui sont dans le panier #}
														{% for element in cart.products %}
																	<tr>
																			{# Element represente notre produits. product represente le produit conserné #}
																			<td> {{ element.product.name }} <span class="product-qty">x {{ element.quantity }}</span></td>
																			<td>$ {{ element.product.price/100 }}</td>
																	</tr>
														{% endfor %}


                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>SubTotal HT</th>
																		{# prendre le cart puis qui est à l'interieur ensuite le SubTotal HT#}
                                    <td class="product-subtotal">$ {{ cart.data.subTotalHT }} </td>
                                </tr>
                                <tr>
                                    <th>Taxe</th>
                                    <td class="product-subtotal">$ {{ cart.data.Taxe }} </td>
                                </tr>
                                <tr>
                                    <th>Total</th>
                                    <td class="product-subtotal">${{ cart.data.subTotalTTC }}</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="payment_method">
                        <div class="heading_s1">
                            <h4>Payment</h4>
                        </div>

                    </div>
                    <button type="submit" id="checkout-button" class="btn btn-fill-out btn-block">Place Order</button>
                </div>
          </div>
        </div>
					{{ form_end(checkout)}}
    </div>
</div>


{% endblock %}
